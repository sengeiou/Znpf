      <view class="flex-row flex-center">
        <view class="txt-bold" style="color:#161616">{{item.name}}</view>
        <view class="flex-1"></view>
        <view class="lable" style="background:{{item.premisestype_color}}">{{item.premisestype_name}}</view>
